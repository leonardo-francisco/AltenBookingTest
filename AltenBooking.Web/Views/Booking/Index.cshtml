@model IEnumerable<AltenBooking.Web.Models.DTO.BookingDTO>
@{
    ViewData["Title"] = "Booking Page";

}

@section Scripts{
<script>
    $(document).ready(function() {
        $('#example').dataTable();
    } );

    function Destroy(id){
        $(".btnDel").on('click', function(){
            $.ajax({
                url:"/Booking/DeleteBooking?id=" + id,
                method: "DELETE",
                success: function(data){
                    location.reload(true);
                }
            });
        });
    }

$(".alert-success").fadeTo(2000, 500).slideUp(500, function(){
   $(".alert-success").slideUp(500);
   location.reload(true);
});  
</script>
}

@if (TempData["crtSucc"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["crtSucc"].ToString()
    </div>
}

@if (TempData["edtSucc"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["edtSucc"].ToString()
    </div>
}

<div class="card">
    <div class="card-header bg-primary" style="color:white; font-weight:400;">
        My Reservations
    </div>
    <div class="card-body">
        <table id="example" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Room</th>
                    <th>Number Guests</th>
                    <th>Arrive Date</th>
                    <th>Leave Date</th>
                    <th>Special Request</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Room</td>
                        <td>@item.NumberGuests</td>
                        <td>
                            @if(@item.ArriveDate != null){

                                 @item.ArriveDate
                            }
                         </td>
                        <td>
                            @if(@item.OutDate != null){

                                 @item.OutDate
                            }
                         </td>
                        <td>@item.Request</td>
                        <td>
                            <div class="dropdown dropdown-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="@Url.Action("EditBooking","Booking", new { id = item.Id})">
                                        <i class="fa-solid fa-pen-to-square"></i> Edit
                                    </a>
                                    <a class="dropdown-item" href="#" onclick="Destroy('@item.Id')" data-toggle="modal" data-target="#delete_booking">
                                        <i class="fa-solid fa-trash-can"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!--Delete Modal-->
<div class="modal fade" id="delete_booking" tabindex="-1" role="dialog" aria-labellebdy="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bye Bye My Reservation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this reservation?</p>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger btn-pill btnDel">Delete</button>
                <button type="button" class="btn btn-dark btn-pill" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
